<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodShare" parent="Theme.Material3.Light.NoActionBar">
        <!-- Ensure there is no default button style here -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="Theme.FoodShare" parent="Base.Theme.FoodShare">
        <!-- Ensure there is no default button style here -->
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <!-- Ensure appropriate theme for BottomNavigationView -->
        <item name="bottomNavigationStyle">@style/BottomNavigationTheme</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- Background color -->
        <item name="android:background">@drawable/btn_background</item>
    </style>



    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Adjust icon size -->
        <item name="itemIconSize">24dp</item>
        <!-- Adjust the space between the icon and text -->
        <item name="itemIconPadding">8dp</item>
        <!-- Custom text appearance to adjust text size, if needed -->
        <item name="itemTextAppearance">@style/MyBottomNavigationTextAppearance</item>

<!--        <item name="itemActiveIndicatorStyle">@style/itemActiveIndicatorStyle</item>-->
        <item name="android:layout_gravity">center</item>
    </style>



    <style name="MyBottomNavigationTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

<!--    <style name="itemActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">-->
<!--        <item name="android:color">@color/red</item>-->
<!--    </style>-->


    <style name="ShapeAppearance.MaterialComponents.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">

        <!-- Add other attributes to customize your FAB -->
    </style>


</resources>
